@import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
@import "palette.styl"

@tailwind components;
@tailwind utilities;

body
    font-family "Nanum Gothic", "Roboto", sans-serif !important

.nav-links
    .nav-item
        font-size 20px !important

    a
        color inherit !important


.dropdown-title
    .title
        font-size 20px !important


.dropdown-item
    font-size 17px !important

.theme-default-content, #disqus_thread
    max-width 100% !important
    margin-right 10% !important
    margin-left 10% !important

a
    text-decoration none !important


h4
    font-size 1.1rem !important

.custom-block.details h4
    margin-top .5rem


.theme-default-content:not(.custom) > h3
    padding-top 4rem !important

strong
    font-weight 800 !important

blockquote
    background #f7f7f7
    font-weight 700
    border-left 0.3rem solid #ffbf00 !important
    color #5c5c5c !important

details blockquote
    background-color #fff !important

.theme-default-content code
    font-weight bold

pre > code
    font-weight 500 !important

@media (max-width: 1350px)
    .theme-default-content, #disqus_thread
        margin-right 5% !important
        margin-left 5% !important

@media (max-width: 419px)
    .theme-default-content > details > div[class*="language-"]
        margin 0.85rem 0 !important
        border-radius 0


.custom-block.details
    padding 1rem !important
    margin 0.5rem 0 !important


.w-100
    width 100%


.w-95
    width 95%


.theme-default-content:not(.custom) > *:first-child
    margin-top 0
    padding-top 0 !important


.page-nav
    padding-top 1rem !important
    padding-bottom 1rem !important
    width 90%
    max-width none !important


.page-edit
    padding 0 !important


.content__default h3, h4
    margin-bottom 5px !important


.sidebar-heading
    margin-bottom


.custom-block.details
    padding 1rem !important
    background-color #f5f5f5 !important


.sidebar, .rightbar
    &::-webkit-scrollbar
        width 6px

    &::-webkit-scrollbar-thumb
        background-color $accentColor
        border-radius 8px

    &::-webkit-scrollbar-track
        background-color rgba(0, 0, 0, .1)
